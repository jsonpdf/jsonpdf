{
  "version": "1.0",
  "name": "Technical Report",
  "description": "A multi-page technical report showcasing cross-references, table of contents, pageBreakBefore, images, numbered lists, and noData band.",
  "page": {
    "width": 612,
    "height": 792,
    "margins": { "top": 50, "right": 55, "bottom": 50, "left": 55 }
  },
  "dataSchema": {
    "type": "object",
    "properties": {
      "reportTitle": { "type": "string" },
      "subtitle": { "type": "string" },
      "author": { "type": "string" },
      "department": { "type": "string" },
      "date": { "type": "string" },
      "documentId": { "type": "string" },
      "introText": { "type": "string" },
      "methodologySteps": { "type": "array" },
      "resultsText": { "type": "string" },
      "conclusionText": { "type": "string" },
      "appendixItems": { "type": "array" }
    }
  },
  "styles": {
    "report-title": {
      "fontSize": 26,
      "fontWeight": "bold",
      "color": "#1a1a2e",
      "textAlign": "center"
    },
    "report-subtitle": {
      "fontSize": 13,
      "color": "#555555",
      "textAlign": "center",
      "lineHeight": 1.4
    },
    "report-meta": {
      "fontSize": 10,
      "color": "#777777",
      "textAlign": "center"
    },
    "toc-title": {
      "fontSize": 18,
      "fontWeight": "bold",
      "color": "#1a1a2e"
    },
    "toc-entry": {
      "fontSize": 11,
      "color": "#333333",
      "lineHeight": 1.8
    },
    "toc-page": {
      "fontSize": 11,
      "color": "#333333",
      "textAlign": "right",
      "lineHeight": 1.8
    },
    "chapter-title": {
      "fontSize": 18,
      "fontWeight": "bold",
      "color": "#1a1a2e"
    },
    "body-text": {
      "fontSize": 10,
      "lineHeight": 1.5,
      "color": "#333333"
    },
    "step-text": {
      "fontSize": 10,
      "lineHeight": 1.4,
      "color": "#333333"
    },
    "figure-caption": {
      "fontSize": 9,
      "color": "#666666",
      "textAlign": "center",
      "fontStyle": "italic"
    },
    "cross-ref": {
      "fontSize": 10,
      "color": "#555555",
      "fontStyle": "italic",
      "lineHeight": 1.5
    },
    "detail-text": {
      "fontSize": 9,
      "color": "#333333"
    },
    "detail-header": {
      "fontSize": 9,
      "fontWeight": "bold",
      "color": "#ffffff",
      "backgroundColor": "#1a1a2e"
    },
    "detail-alt": {
      "fontSize": 9,
      "color": "#333333",
      "backgroundColor": "#f5f5f5"
    },
    "no-data": {
      "fontSize": 11,
      "color": "#999999",
      "textAlign": "center",
      "fontStyle": "italic"
    },
    "footer": {
      "fontSize": 8,
      "color": "#999999",
      "textAlign": "center"
    }
  },
  "fonts": [],
  "sections": [
    {
      "id": "report",
      "bookmark": "Cloud Migration Assessment",
      "bands": [
        {
          "id": "title-page",
          "type": "title",
          "height": 300,
          "elements": [
            {
              "id": "title-line-top",
