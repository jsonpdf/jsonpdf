              "height": 240,
              "style": "detail-text",
              "properties": {
                "columns": [
                  { "key": "id", "header": "ID", "width": 40 },
                  { "key": "application", "header": "Application", "flex": 1 },
                  { "key": "category", "header": "Category", "width": 85 },
                  { "key": "complexity", "header": "Complexity", "width": 75 },
                  { "key": "savings", "header": "Annual Savings", "width": 90, "align": "right" }
